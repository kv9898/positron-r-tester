{
  "name": "positron-r-tester",
  "displayName": "Positron R Tester",
  "description": "View and run your R (testthat) tests in the Sidebar of Positron, for non-package projects",
  "author": "Dianyi Yang <dianyi.yang@politics.ox.ac.uk>",
  "publisher": "kv9898",
  "license": "Elastic-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kv9898/positron-r-tester.git"
  },
  "homepage": "https://github.com/kv9898/positron-r-tester#readme",
  "bugs": {
    "url": "https://github.com/kv9898/positron-r-tester/issues"
  },
  "icon": "resources/icon.png",
  "keywords": [
    "R",
    "testthat",
    "testing",
    "test-explorer",
    "positron",
    "r-language"
  ],
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Testing"
  ],
  "activationEvents": [
    "onLanguage:r",
    "onView:test-explorer"
  ],
  "main": "./dist/extension.js",
  "contributes": {},
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/fs-extra": "9.0.13",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/split2": "^4.2.3",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "^9.32.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "fs-extra": "10.0.1",
    "p-queue": "6.6.2",
    "split2": "^4.2.0",
    "web-tree-sitter": "0.20.8"
  },
  "positron": {
    "minimumRVersion": "4.2.0",
    "minimumRenvVersion": "1.0.9"
  }
}
